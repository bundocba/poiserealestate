<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
<field
	default=""
	name="id"
	label="Id"
	type="hidden"
	class="inputbox"
	size="11"
	required="false"
/>
<field
	required="true"
	default=""
	name="name"
	label="FI_NAME"
	type="text"
	class="inputbox"
	size="100"
/>
<field name="datenow" 
    type="calendar" 
    label="Date"
    description="Date" 
    format="%Y-%m-%d %H:%M:%S"
    required="true"
    filter="user_utc"
    default="now" 
    class="readonly" />

<field
	required="true"
	default=""
	name="description"
	label="FI_DESCRIPTION"
	type="text"
	class="inputbox"
	size="100"
/>

<field name="published" type="list" label="FI_STATUS"
	class="inputbox"
	filter="intval" size="1" default="1"
>
	<option value="1">FI_NOTBLOCK</option>
	<option value="0">FI_BLOCK</option>
</field>
	</fieldset>
</form>